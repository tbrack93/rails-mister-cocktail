
<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= asset_path 'cocktails.jpg'%>);">
  <div class="banner-content">
    <h1> Crazy Cocktails </h1>
    <p><span id="banner-typed-text"></span>
</p>
</div>
</div>

<div class= "container">
<div class="row">
  <div class="col-xs-8 col-xs-offset-2">
<% @cocktails.each do |cocktail| %>
<div class="card col-xs-4">
  <div class="card-inner ">
<p> <%=link_to cocktail.name, cocktail %> </p>
</div>
</div>
<% end %>
</div>
</div>

</div>

